# Captive Portal Network - Variáveis de Ambiente
# Copie este arquivo para .env e preencha com seus valores

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_PATH=/app/data/database.sqlite

# =============================================================================
# ADMIN AUTHENTICATION
# =============================================================================
# Credenciais para acessar a interface administrativa
# ⚠️ ALTERE ESTAS CREDENCIAIS EM PRODUÇÃO!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# Admin Registration Secret (use strong random string)
ADMIN_REGISTRATION_SECRET=your_secret_key_here

# =============================================================================
# OAUTH - GOOGLE
# =============================================================================
# Obtenha em: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://192.168.10.1:3000/auth/google/callback

# Legacy (manter por compatibilidade)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

# =============================================================================
# OAUTH - FACEBOOK
# =============================================================================
# Obtenha em: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_CALLBACK_URL=http://192.168.10.1:3000/auth/facebook/callback

# Legacy (manter por compatibilidade)
OAUTH_FACEBOOK_CLIENT_ID=
OAUTH_FACEBOOK_CLIENT_SECRET=
OAUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# =============================================================================
# INSTAGRAM REDIRECT
# =============================================================================
# URL para onde o usuário será redirecionado após autenticação
INSTAGRAM_REDIRECT_URL=https://instagram.com/sua_instituicao
CAPTIVE_REDIRECT_SUCCESS=https://www.instagram.com

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Secret usado para assinar cookies de sessão
# ⚠️ GERE UM SECRET ALEATÓRIO FORTE EM PRODUÇÃO!
# Exemplo: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change-this-secret-in-production-use-a-strong-random-string

# Tempo de expiração da sessão
SESSION_TIMEOUT=3600
SESSION_TTL_MINUTES=60

# =============================================================================
# NETWORK INTERFACES
# =============================================================================
# Interface conectada à internet (WAN)
WAN_INTERFACE=eth0

# Interface conectada à rede local (LAN)
LAN_INTERFACE=eth1

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Endereço IP da interface LAN (gateway)
LAN_IP=192.168.10.1

# Range DHCP (configurado no dnsmasq)
DHCP_START=192.168.10.100
DHCP_END=192.168.10.254

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log

